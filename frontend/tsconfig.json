{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "incremental": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es6", "dom", "WebWorker"],
    "moduleResolution": "node",
    "module": "es2015",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "removeComments": false,
    "sourceMap": true, 
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "paths": {
      "@app" : [
        "src/*"
      ], 
    },
  },
  "exclude": [
    "node_modules",
  ]
}